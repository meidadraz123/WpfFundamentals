<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" > 

 <Grid.ColumnDefinitions>
  <ColumnDefinition  />
  <ColumnDefinition  />
 </Grid.ColumnDefinitions>
 
 <MediaElement x:Name="Video1" Source="02 SampleVideo_1280x720_10mb.mp4" IsMuted="False"/>
 <MediaElement x:Name="Video2" Source="02 Wildlife.mp4" IsMuted="True"/>

 <Rectangle Grid.Column="0">
 	<Rectangle.Fill>
 		<VisualBrush Visual="{Binding ElementName=Video1}"/>
 	</Rectangle.Fill>
 </Rectangle>
 <Rectangle Grid.Column="1">
 	<Rectangle.Fill>
 		<VisualBrush Visual="{Binding ElementName=Video2}"/>
 	</Rectangle.Fill>
 </Rectangle>

 


</Grid>

