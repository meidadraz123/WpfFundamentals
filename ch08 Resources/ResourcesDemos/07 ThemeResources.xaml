<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Grid.Resources> 
  		<!-- options are for example: 
  			1) /PresentationFramework.Luna, component/themes/Luna.NormalColor.xaml 
  			2) /PresentationFramework.Luna, component/themes/Luna.Metallic.xaml 
  			3) /PresentationFramework.Classic, component/themes/Classic.xaml
		-->
    <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Classic, Version=3.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35;component/themes/Classic.xaml" />
